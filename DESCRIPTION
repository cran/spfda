Package: spfda
Type: Package
Title: Function-on-Scalar Regression with Group-Bridge Penalty
Version: 0.9.1
License: MIT + file LICENSE
Authors@R: c(
    person("Zhengjia", "Wang", email = "dipterix.wang@gmail.com", role = c("aut", "cre"), comment = c(ORCID = "0000-0001-5629-1116")),
